{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    "editor.rulers": [80, 120],
    "editor.cursorStyle": "block-outline",
    "editor.autoClosingBrackets": "never",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.associations": {
        "*.c": "c",
        "*.h": "c",
        "*.h.in": "c",
        "config.H": "cpp"
    }
}
